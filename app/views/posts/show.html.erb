<div class="container">
  <div class="row">
    
    <div class="col-sm-6">
      <%= render "users/users", user: @user %>
    </div>
    
    <div class="col-sm-6">
      <div><%= @post.title %></div>
      <% if @post.image? %>
        <%= image_tag @post.image.url, :size =>'250x250' %>
      <% end %>
      <div><%= @post.created_at %></div>
      <%= render "favorites/likes_button", post: @post %>
      <%= post.favorites.count %>
    </div>
    
  </div>
</div>

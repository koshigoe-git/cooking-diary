<h1 class="text-center">-----新着料理一覧-----</h1>
  <div class="container">
    <div class="row">
      <% posts.each do |post| %>
        <div class="col-sm-3">
          <div class="mb-1">料理名:<%= link_to post.title, post, class:"no-underline" %></div>
          <% if post.image? %>
            <%= image_tag post.image.url, :size =>'250x250' %>
          <% end %>
          <div class="mb-4">投稿日:<%= post.created_at.strftime("%Y年%m月%d日") %></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="m-3"><%= paginate @posts %></div>
<div class="text-center">
  <h1>Sign up</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
      <!-- 変数model = f.objectのこと,ここには8行目の@user(=@user,users#new)が入る -->
      <!-- f.object(=@user,users#new)で1つでもエラーがあれば表示される-->
      <%= render "layouts/error_messages", model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :introduce, '自己紹介(25文字以内)' %>
        <%= f.text_field :introduce, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password(英数字のみ,8文字以上）' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirmation（パスワード確認）' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', class: 'mb-3 btn btn-warning btn-block' %>
    <% end %>
    
    <div class="text-center">
      <%= link_to 'アカウントをお持ちの方はこちら', login_path %>
    </div>
    
  </div>
</div>

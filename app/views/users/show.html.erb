<%= render "users/users", user: @user %>

<%if @posts.any? %>
    <!-- posts一覧を取得し、それぞれの投稿情報を変数postに入れて表示-->
    
    <div class="container">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-sm-3">
           <div>
             <!-- 思ったところにページが飛ばない -->
             <%= link_to post.title, post_path(post.id) %>
           </div>
           <% if post.image? %>
             <%= image_tag post.image.url, :size =>'250x250' %>
           <% end %>
           <div><%= post.created_at %></div>
           <%= render "favorites/likes_button", post: post %>
           <%= post.favorites.count %>
          </div>
        <% end %>
      </div>
    </div>

  <% paginate @posts %>
<% end %>
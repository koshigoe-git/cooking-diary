<%= render "users/users", user: @user %>

<%if @posts.any? %>
    <!-- posts一覧を取得し、それぞれの投稿情報を変数postに入れて表示-->
    
    <div class="container">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-sm-3">
            <div>
              <!-- リンク先はpost_path(post)の省略形 -->
              料理名:<%= link_to post.title, post %>
            </div>
            <% if post.image? %>
              <%= image_tag post.image.url, :size =>'250x250' %>
            <% end %>
            <div>投稿日:<%= post.created_at.strftime("%Y年%m月%d日") %></div>
            <div class="row">
              <span class="ml-3"><%= render "favorites/likes_button", post: post %></span>
              <span class="ml-1"><%= post.favorites.count %></span>
              <%= link_to "編集", edit_post_path, class: "btn btn-primary btn-sm" %>
              <%= link_to "削除", post_path, method: :delete,class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  <div class="m-3"><%= paginate @posts %></div>
<% end %>